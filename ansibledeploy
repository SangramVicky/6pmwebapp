pipeline{
    agent any
    environment{
		PATH = "${PATH}:${tool name: 'maven11', type: 'maven'}/bin"
		}
    stages{
        stage('SCM Checkout'){
            steps{
                git url: 'https://github.com/SangramVicky/6pmwebapp',
                branch: 'master',
                credentialsId: 'github'
            }
        }

        stage('Maven Build'){
            steps{
                sh 'mvn clean package'
            }
        }

           }
}
